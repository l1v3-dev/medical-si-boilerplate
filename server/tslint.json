{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended"],
  "rules": {
    "no-trailing-whitespace": [true, "ignore-comments"],
    "prefer-const": [
      true,
      {
        "destructuring": "any"
      }
    ],
    "semicolon": [true, "always"],
    "quotemark": [true, "double"],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-snake-case",
      "allow-leading-underscore"
    ],
    "trailing-comma": [
      false,
      {
        "singleline": "never",
        "multiline": "never"
      }
    ],
    "object-literal-sort-keys": false,
    "no-console": false
  },
  "linterOptions": {
    "exclude": ["node_modules/**", "dist/**/*.ts"]
  },
  "rulesDirectory": []
}
